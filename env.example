# Next.js Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3002

# WebRTC Configuration
NEXT_PUBLIC_STUN_SERVER=stun:stun.l.google.com:19302
NEXT_PUBLIC_TURN_SERVER_URL=
NEXT_PUBLIC_TURN_SERVER_USERNAME=
NEXT_PUBLIC_TURN_SERVER_CREDENTIAL=

# App Configuration
NEXT_PUBLIC_APP_NAME=VideoCall
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Optional: Error Reporting
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=false

# Optional: Feature Flags
NEXT_PUBLIC_SFU_ENABLED=true
NEXT_PUBLIC_P2P_FALLBACK=true
NEXT_PUBLIC_RECORDING_ENABLED=false
NEXT_PUBLIC_SCREEN_SHARE_ENABLED=true
NEXT_PUBLIC_CHAT_ENABLED=true

# Development
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug
